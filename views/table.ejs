<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-outline-primary btn-sm"
        data-toggle="modal"
        data-target="#add-modal"
      >
        Add
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Nama</th>
              <th>NIP</th>
              <th>Jabatan</th>
              <th>Alamat</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < karyawan.length; i++){ %>
            <tr>
              <td><%= i +1 %></td>
              <td><%= karyawan[i].nama %></td>
              <td><%= karyawan[i].nip %></td>
              <td><%= karyawan[i].jabatan %></td>
              <td><%= karyawan[i].alamat %></td>
              <td class="text-center">
                <form action="/karyawan/<%= karyawan[i].id %>?_method=DELETE" method="POST">
                <a
                  href="javascript:void()"
                  class="btn btn-outline-warning btn-sm button-update"
                  data-id="<%= karyawan[i].id %>"
                  data-nama="<%= karyawan[i].nama %>"
                  data-nip="<%= karyawan[i].nip %>"
                  data-jabatan="<%= karyawan[i].jabatan %>"
                  data-alamat="<%= karyawan[i].alamat %>"
                  >Edit</a>
                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Apakah kamu yakin ingin hapus data?');">
                  Delete
                </button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>